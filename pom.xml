    <properties>
        <slf4j.version>1.7.7</slf4j.version>
        <logback.version>1.1.2</logback.version>
        <commons-lang.version>3.3.2</commons-lang.version>
        <hibernate.version>5.3.4.Final</hibernate.version>
        <hibernate.validator.version>5.2.3.Final</hibernate.validator.version>
        <javassist.version>3.18.1-GA</javassist.version>
        <ehcache.version>3.4.0</ehcache.version>
        <datasource-proxy.version>1.3.3</datasource-proxy.version>
        <p6spy.version>2.1.4</p6spy.version>
        <hsqldb.version>2.4.0</hsqldb.version>
        <postgresql.version>42.2.1</postgresql.version>
        <oracle.version>12.2.0.1</oracle.version>
        <!--<oracle.version>11.2.0.4</oracle.version>-->
        <mysql.version>6.0.6</mysql.version>
        <mariadb.version>2.2.3</mariadb.version>
        <mssql.version>6.4.0.jre8</mssql.version>
        <jtds.version>1.3.1</jtds.version>

        <javax.el.version>2.2.4</javax.el.version>
        <javax.transaction.version>1.1</javax.transaction.version>

        <codahale.metrics.version>3.1.0</codahale.metrics.version>
        <hikari.version>1.3.3</hikari.version>
        <btm.version>2.1.4</btm.version>
        <flexy-pool.version>2.0.0</flexy-pool.version>

        <aspectj.version>1.8.7</aspectj.version>
        <spring.version>4.3.3.RELEASE</spring.version>

        <jackson.version>2.7.4</jackson.version>

        <flyway.version>3.2.1</flyway.version>
        <db-util.version>0.0.1</db-util.version>

        <junit.version>4.12</junit.version>
    </properties>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.2</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                    <compilerArgument>-proc:none</compilerArgument>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>properties-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>set-system-properties</goal>
                        </goals>
                        <configuration>
                            <properties>
                                <!--<property>
                                    <name>hibernate.bytecode.provider</name>
                                    <value>bytebuddy</value>
                                </property>-->
                            </properties>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.19.1</version>
                <configuration>
                    <argLine>-Xms1024m -Xmx1024m</argLine>

                    <systemPropertyVariables>
                        <bitronix.tm.journal.disk.logPart1Filename>${project.build.directory}/btm1.log</bitronix.tm.journal.disk.logPart1Filename>
                        <bitronix.tm.journal.disk.logPart2Filename>${project.build.directory}/btm2.log</bitronix.tm.journal.disk.logPart2Filename>
                    </systemPropertyVariables>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>oracle</id>
            <activation>
                <property>
                    <name>ENABLE_ORACLE_REPOSITORY</name>
                    <value>true</value>
                </property>
            </activation>
            <repositories>
                <repository>
                    <id>maven.oracle.com</id>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                    <url>https://maven.oracle.com</url>
                    <layout>default</layout>
                </repository>
            </repositories>
            <dependencies>
                <dependency>
                    <groupId>com.oracle.jdbc</groupId>
                    <artifactId>ojdbc8</artifactId>
                    <version>${oracle.version}</version>
                </dependency>
            </dependencies>
        </profile>
    </profiles>

</project>